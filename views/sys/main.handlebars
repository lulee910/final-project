 <div class="container" style="position: absolute; top: 25%;left: 50%; height: 300px;  margin-top: -100px; width: 450px;  margin-left: -200px;  ">
        <ul id="myTab" class="nav nav-tabs">
            <li id="li_login" class="active"><a href="#login" data-toggle="tab">Sign In</a></li>
            <li id="li_reg"><a href="#reg" data-toggle="tab">Sign Up</a></li>
        </ul>
        <div id="myTabContent" class="tab-content">
            <div class="tab-pane fade in active" id="login">
                <form role="form" class="form-horizontal" action="http://localhost:3000/login" method="POST">
                    <div class="form-group">
                        <label for="username" class="col-sm-4 control-label pull-left">&nbsp;&nbsp;Username&nbsp;</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="username" name="username">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="passwd" class="col-sm-4 control-label pull-left">&nbsp;&nbsp;Password&nbsp;</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="passwd" name="passwd" >
                        </div>
                    </div>
                    {{#if error}}
                     <div class="tip" id="error">
                     <h6 class="text-info" style="color:rgb(255, 60, 0)"> &nbsp;&nbsp;<span class="glyphicon glyphicon-exclamation-sign"></span> &nbsp;The username and/or password you specified are not correct.</h6>
                     </div>
                    {{/if}}
                    <div class="form-group">
                        <div class="">
                            <div class="checkbox pull-left" style="display:inline-block;margin-left:5%">
                                &nbsp;&nbsp;<label><input type="checkbox" id="remember">remember me</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" id="loginBtn" class="btn btn-primary btn-lg" value="Sign In" style="width:92%;margin-left:4%">
                    </div>
                </form>
            </div>
            <div class="tab-pane fade" id="reg">
                <div class="hidden">
                    <label id="message">{{message}}</label>
                    <label id="li_flag">{{liFlag}}</label>
                </div>
                <form role="form" class="form-horizontal" action="/register" method="POST">
                    <div class="tip" id="phonenumTip"></div>
                    <div class=" form-group">
                        <label for="usernameR" class="col-sm-4 control-label pull-left">&nbsp;Username&nbsp;<span class="requisiteTip ">*</span>&nbsp;</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="usernameR" name="usernameR" value="{{usernameR}}" required>
                        </div>
                    </div>
                    <div class="tip" id="usernameTip"></div>
                    <div class="form-group ">
                        <label for="passwd1 " class="col-sm-4 control-label ">&nbsp;Password&nbsp;<span class="requisiteTip ">*</span>&nbsp;</label>
                        <div class="col-sm-8 ">
                            <input type="password" class="form-control " id="passwd1" name="passwd1" value="{{passwd1}}" required>
                        </div>
                    </div>
                    <div class="tip" id="passwd1Tip"></div>
                    <div class="form-group ">
                            <label for="passwd2 " class="col-sm-4 control-label ">&nbsp;Confirm&nbsp;Password&nbsp;<span class="requisiteTip ">*</span>&nbsp;</label>
                        <div class="col-sm-8 ">
                            <input type="password" class="form-control " id="passwd2" name="passwd2" value="{{passwd2}}" required>
                        </div>
                    </div>
                    <div class="tip" id="passwd2Tip"></div>
                    <br>
                    <div class="form-group">
                        <input type="submit" id="registerBtn" class="btn btn-primary btn-lg " style="width:92%;margin-left:4% " value="Sign Up">
                    </div>
                </form>
            </div>
        </div>
    </div>