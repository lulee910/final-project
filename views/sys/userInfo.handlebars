<html lang="en">

<head>
    <title>User Information</title>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8">

    {{> head_script}}
    <script src="/public/js/c_js_doctorInfo.js"></script>

</head>

<body>
    <label id="message" class="hidden">{{message}}</label>
    <ul id="myTab" class="nav nav-tabs">
        <li {{#if flag1}}class="active" {{/if}}><a href="#userList" data-toggle="tab">User Information</a></li>
        <li {{#if flag2}}class="active" {{/if}}><a href="#userAdd" data-toggle="tab">User Add</a></li>
    </ul>
    <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade {{#if flag1}}in active{{/if}}" id="userList">
            <div class="panel panel-default ">
            <div class="panel-heading">
                <strong><span>Query Information</span></strong>
            </div>
            <div class="panel-body">

            <form id="searchForm"  action="/doctorInfo/query" method="post"
                class="form-horizontal">
                <input id="pageNo" name="pageNo" type="hidden" value="${page.pageNo}" />
                <input id="pageSize" name="pageSize" type="hidden" value="${page.pageSize}" />
                <div class="form-group">
                    <label for="loginName" class="col-sm-2 control-label">Login Name</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control " id="loginName" name="loginName">
                    </div>
                    <input id="btnQuery" class="btn btn-primary" type="submit" value="Query" />
                </div>
            </form>
            </div>
            </div>
            
            <div class="panel panel-default ">
            <div class="panel-heading">
                <strong><span>Result Information</span></strong>
            </div>
            <div class="panel-body">
            <table id="contentTable" class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Login Name</th>
                        <th>Remarks</th>
                        <th width="10">&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each userInfo}}
                    <tr>
                        <td><a href="/doctorInfo/update/{{_id}}">
                                {{loginName}}
                            </a></td>
                        <td>
                            {{Remarks}}
                        </td>
                        <td>
                            <span class="close" onclick="confirmx(this, '{{_id}}')" title="delete">&times;</span>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            </div>
            </div>

        </div>
        <div class="tab-pane fade {{#if flag2}}in active{{/if}}" id="userAdd">
            <br/>
            <form id="inputForm"  action="/doctorInfo/save" method="post"
                class="form-horizontal">
                <div class="control-group">
                    <div class="row">
                        <div class="col-md-2 ">
                            <label class="control-label" for="userName">Login Name</label> <span style="color:red">*</span>
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control " id="userName" name="userInfo[userName]"
                                value="{{#doctorData}}{{userName}}{{/doctorData}}" required />
                        </div>
                    </div>
                </div>
                <div class="tip" id="usernameTip"></div>

                <div class="control-group">
                    <div class="row">
                        <div class="col-md-2 ">
                            <label class="control-label" for="passswd1">Password</label> <span style="color:red">*</span>
                        </div>
                        <div class="col-md-4">
                            <input type="password" class="form-control " id="passswd1" name="userInfo[passswd]"
                                value="{{#doctorData}}{{passswd1}}{{/doctorData}}" required />
                        </div>
                    </div>
                </div>
                <div class="tip" id="passswd1Tip"></div>

                 <div class="row">
                        <div class="col-md-2 ">
                            <label class="control-label" for="passswd2">Confirm Password</label> <span style="color:red">*</span>
                        </div>
                        <div class="col-md-4">
                            <input type="password" class="form-control " id="passswd2" name="userInfo[passswd2]"
                                value="{{#doctorData}}{{passswd2}}{{/doctorData}}" required />
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <input id="btnSubmit" class="btn btn-primary" type="submit" value="submit" />&nbsp;
                </div>
            </form>
        </div>
    </div>
</body>

</html>