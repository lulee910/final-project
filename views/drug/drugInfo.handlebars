<html lang="en">

<head>
    <title>Drug Info</title>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8">
    
    {{> head_script}}
    <script src="/public/js/d_js_drugInfo.js"></script>
</head>

<body>
    <ul id="myTab" class="nav nav-tabs">
        <li class="active"><a href="#login" data-toggle="tab">Search Drug</a></li>
        <li><a href="#reg" data-toggle="tab">Add Drug</a></li>
    </ul>

    <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade in active" id="login">
            <form id="searchForm" modelAttribute="drugInfo" action="/drugInfo/query" method="post"
                class="breadcrumb form-search">
                <input id="pageNo" name="pageNo" type="hidden" value="${page.pageNo}" />
                <input id="pageSize" name="pageSize" type="hidden" value="${page.pageSize}" />
                <table class="table table-bordered table-condensed" style="margin-bottom: 0px;">
                    <tbody>
                        <tr>
                            <td class="key"><label for="drugName">Drug Name</label></td>
                            <td><input type="text" class="form-control" id="drugName">
                                <input id="enter" type="hidden" value="0" /></td>
                            <td class="key"><label for="drugType">Drug Type</label></td>
                            <td><input type="text" class="form-control" id="drugType">
                                <input id="enter" type="hidden" value="0" /></td>
                            <td class="btns"><input id="btnSubmit" class="btn btn-primary" type="submit"
                                    value="Search" /></td>
                        </tr>
                    </tbody>
                </table>
            </form>
            <table id="contentTable" class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Drug Name</th>
                        <th>Drug Spec</th>
                        <th>Drug Type</th>
                        <th>Drug Unit</th>
                        <th>Drug Price</th>
                        <th>SC Date</th>
                        <th>Remark</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each drugInfo}}
                    <tr id="{{_id}}" pid="0">
                        <td>{{drugName}}</td>
                        <td>{{drugSpec}}</td>
                        <td>{{drugType}}</td>
                        <td>{{drugUnit}}</td>
                        <td>{{drugPrice}}</td>
                        <td>{{SCDate}}</td>
                        <td>{{Remark}}</td>
                        <td>
                            <span class="close" onclick="confirmx(this, '{{_id}}')" title="delete">&times;</span>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="tab-pane fade" id="reg">
            <form id="inputForm" modelAttribute="drugInfo" action="/drugInfo/save" method="post" class="form-horizontal">
                <form:hidden path="id" />
                <form:hidden path="drugId" value="${fns:getUser().drugId }" />
                <sys:message content="${message}" />
                <table class="table table-bordered table-condensed" style="margin-bottom: 0px;">
                    <tbody>
                        <tr>
                            <td class="key"><label for="drugName">Drug Name</label><span style="color:red">*</span></td>
                            <td><input type="text" class="form-control" id="drugName">
                                <input id="enter" type="hidden" value="0" /></td>
                            <td class="key"><label for="drugType">Drug Type</label><span style="color:red">*</span></td>
                            <td><input type="text" class="form-control" id="drugType">
                                <input id="enter" type="hidden" value="0" /></td>
                        </tr>
                        <tr>
                            <td class="key"><label for="barCode">Bar Code</label></td>
                            <td><input type="text" class="form-control" id="barCode">
                                <input id="enter" type="hidden" value="0" /></td>
                            <td class="key"><label for="drugSpec">Drug Spec</label></td>
                            <td><input type="text" class="form-control" id="drugSpec">
                                <input id="enter" type="hidden" value="0" /></td>
                        </tr>
                        <tr>
                            <td class="key"><label for="drugUnit">Drug Unit</label></td>
                            <td><input type="text" class="form-control" id="drugUnit">
                                <input id="enter" type="hidden" value="0" /></td>
                            <td class="key"><label for="drugPrice">Drug Price</label></td>
                            <td><input type="text" class="form-control" id="drugPrice">
                                <input id="enter" type="hidden" value="0" /></td>
                        </tr>
                        <tr>
                            <td class="key"><label for="SCDate">SC Date</label></td>
                            <td><input type="text" class="form-control" id="SCDate">
                                <input id="enter" type="hidden" value="0" /></td>
                            <td class="key"><label for="Remark">Remark</label></td>
                            <td><input type="text" class="form-control" id="Remark">
                                <input id="enter" type="hidden" value="0" /></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td class="btns"></td>
                            <td><input id="btnSubmit" class="btn btn-primary" type="submit"
                                    value="Submit" />
                                <input id="btnCancel" class="btn btn-default" type="button" value="Return" onclick="history.go(-1)" /></td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</body>

</html>